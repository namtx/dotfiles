{
  "title": "Open Alacritty",
  "rules": [
    {
      "description": "Open Alacritty when pressing cmd + enter",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "return_or_enter",
            "modifiers": {
              "mandatory": [
                "left_gui"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a /Applications/Alacritty.app/Contents/MacOS/alacritty"
            }
          ],
          "to_if_alone": [
            {
              "shell_command": "open -a /Applications/Alacritty.app/Contents/MacOS/alacritty"
            }
          ]
        }
      ]
    }
  ]
}
